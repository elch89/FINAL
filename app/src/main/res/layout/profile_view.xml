<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#99000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/profile_att_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attribute name"
                android:textSize="18sp"
                android:layout_margin="8dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/averia_serif_libre_bold_italic"
                 />
            <TextView
                android:id="@+id/profile_att"
                android:fontFamily="@font/averia_serif_libre_bold_italic"
                android:layout_width="match_parent"

                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"
                android:text="Attribute"/>
        </LinearLayout>
        <Button
            android:layout_gravity="center"
            android:id="@+id/profile_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="25dp"
            android:background="@drawable/ic_action_edit"

            />
    </LinearLayout>
</android.support.v7.widget.CardView>